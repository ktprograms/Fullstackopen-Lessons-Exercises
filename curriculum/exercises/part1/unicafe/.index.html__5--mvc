<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <link rel="stylesheet" href="/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vite App</title>
  </head>
  <body>
    <h2>give feedback</h2>

    <button id="button-good">good</button> <!--TODO: Naming convention-->
    <button id="button-neutral">neutral</button>
    <button id="button-bad">bad</button>
    <br />
    <button id="button-reset">reset</button>

    <h2>statistics</h2>

    <div id="no-statistics">no feedback given</div>
    <table id="statistics" class="hidden">
      <tbody>
        <tr>
          <td>good</td>
          <td id="text-good">0</td>
        </tr>
        <tr>
          <td>neutral</td>
          <td id="text-neutral">0</td>
        </tr>
        <tr>
          <td>bad</td>
          <td id="text-bad">0</td>
        </tr>
        <tr>
          <td>all</td>
          <td id="text-all">0</td>
        </tr>
        <tr>
          <td>average</td>
          <td id="text-average">0</td>
        </tr>
        <tr>
          <td>positive</td>
          <td id="text-positive">0</td>
          <td>%</td>
        </tr>
      </tbody>
    </table>

    <script type="module" src="/src/main.js"></script>
  </body>
</html>
