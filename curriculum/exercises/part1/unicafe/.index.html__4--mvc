<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/vite.svg" />
    <link rel="stylesheet" href="/style.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Vite App</title>
  </head>
  <body>
    <h2>give feedback</h2>

    <button id="button-good">good</button> <!--TODO: Naming convention-->
    <button id="button-neutral">neutral</button>
    <button id="button-bad">bad</button>
    <br />
    <button id="button-reset">reset</button>

    <h2>statistics</h2>

    <div id="no-statistics">no feedback given</div>
    <div id="statistics" class="hidden">
      good <span id="text-good">0</span><br/>
      neutral <span id="text-neutral">0</span><br />
      bad <span id="text-bad">0</span><br />
      all <span id="text-all">0</span><br />
      average <span id="text-average">0</span><br />
      positive <span id="text-positive">0</span>%<br />
    </div>

    <script type="module" src="/src/main.js"></script>
  </body>
</html>
